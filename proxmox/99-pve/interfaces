auto lo
iface lo inet loopback

#1G router uplink
iface nic0 inet manual

#2.5G link pc
iface nic1 inet manual 
        bridge-access 10

auto vmbr0
iface vmbr0 inet static
        address 10.0.1.10/24
        gateway 10.0.1.1
        bridge-ports nic0 nic1
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094